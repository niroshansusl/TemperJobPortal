<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

            <variable
                name="jobDetailViewModel"
                type="com.niroshan.temperjobportal.viewModel.ItemJobCardViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/item_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="@{jobDetailViewModel::onItemClick}"
        android:padding="@dimen/spacing_medium">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:layout_marginLeft="@dimen/spacing_xsmall"
            android:layout_marginRight="@dimen/spacing_xsmall"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/img_card_background"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                tools:imageUrl="@{jobDetailViewModel.image}" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_icon_dining"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="200dp">

                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{jobDetailViewModel.clientName}"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/label_name"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:text="@{jobDetailViewModel.distance}"
                    />

                <RatingBar
                    android:id="@+id/label_rating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/label_name"
                    android:numStars="5"
                    android:stepSize=".5"
                    android:isIndicator="true"
                    android:rating="@={jobDetailViewModel.rating}"
                    android:theme="@style/RatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    />

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_below="@+id/label_name"
                    android:layout_toRightOf="@+id/label_rating"
                    android:layout_marginLeft="10dp"
                    android:text="@{jobDetailViewModel.reviewCount}"
                    />

                <TextView
                    android:id="@+id/label_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/label_name"
                    android:layout_alignLeft="@+id/label_name"
                    android:layout_below="@+id/label_rating"
                    android:text="@{jobDetailViewModel.cell}"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="14sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</layout>